        <!-- GroupHeader-->
        <DataTemplate x:Key="GroupHeaderTemplate">
            <Grid Margin="{StaticResource PhoneTouchTargetOverhang}" Background="Transparent">
                <Border Background="{StaticResource PhoneAccentBrush}" Width="60" Height="30" HorizontalAlignment="Left">
                    <TextBlock Text="{Binding Index}" Foreground="{StaticResource PhoneForegroundBrush}" FontSize="25" Style="{StaticResource PhoneTextExtraLargeStyle}"/>
                </Border>
            </Grid>

        </DataTemplate>
        <!-- Item-->
        <DataTemplate x:Name="ItemTemplate">
            <Grid Margin="{StaticResource PhoneTouchTargetOverhang}" Background="Transparent">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="{Binding Name}"  FontSize="30" Foreground="White" />
                    <TextBlock Text="{Binding NamePinyin}"  FontSize="20"  Margin="10 0 0 0" Foreground="White" Opacity="0.7" />
                </StackPanel>
            </Grid>

        </DataTemplate>
        <phone:JumpListItemBackgroundConverter x:Key="BackgroundConverter"/>
        <phone:JumpListItemForegroundConverter x:Key="ForegroundConverter"/>

